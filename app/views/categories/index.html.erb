<% if current_user && current_user.admin %>
  <div class="container">
    <h1>Categories</h1>
    <% @categories.each do |category| %>
      <div class="margin-top">
        <div class="card">
          <div class="margin-top">  
            <span class="badge badge-pill text-uppercase" style="background-color: <%= category.color %>">
              <%= link_to category.title, category, class:"text-white"%>
            </span>
          </div>
          <p class="text-secondary"><%= category.created_at %></p>
          <div>
            <%= link_to 'Show', category, :class => "btn btn-info btn-lg" %>
            <%= link_to 'Edit', edit_category_path(category), :class => "btn btn-secondary btn-lg" %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-lg" %>
          </div>     
        </div>  
      </div>
    <% end %>
    <br>
    <%= link_to 'New Category', new_category_path, :class => "btn btn-primary" %>
  </div>
<%end%>