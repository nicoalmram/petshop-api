<div class="container-fluid">
  <h1>Animals</h1>
  <% @animals.each do |animal| %>
    <div class="margin-top">
      <div class="card">
        <div class="margin-top">  
          <span class="badge badge-pill text-uppercase" style="background-color: <%= animal.color %>">
            <%= link_to animal.title, animal, class:"text-white"%>
          </span>
        </div>
        <p class="text-secondary"><%= animal.created_at %></p>
        <div>
          <%= image_tag url_for(animal.banner), :style => "width:100%; height:auto;" %>
        </div>
        <div>
          <%= link_to 'Show', animal, :class => "btn btn-info btn-lg" %>
          <%= link_to 'Edit', edit_animal_path(animal), :class => "btn btn-secondary btn-lg" %>
          <%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>
  <br>
  <%= link_to 'New Animal', new_animal_path, :class => "btn btn-primary" %>
</div>