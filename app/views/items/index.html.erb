<% if current_user && current_user.admin %>
  <div class="container">
    <h1>Item</h1>
    <% @items.each do |item| %>
      <div class="margin-top">
        <div class="card">
          <h3 class="text-uppercase"><%= item.name %></h3>
          <p class="text-secondary"><%= item.created_at %></p>
          <div>
            <%= link_to 'Show', item, :class => "btn btn-info btn-lg" %>
            <%= link_to 'Edit', edit_item_path(item), :class => "btn btn-secondary btn-lg" %>
            <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-lg" %>
          </div>
        </div>
      </div>
    <% end %>
    <br>
    <%= link_to 'New Item', new_item_path, :class => "btn btn-primary" %>
  </div>
<%end%>